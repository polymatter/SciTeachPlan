<% @l_classes.each do |l_class| %>
  <tr>
    <td><%= l_class.name %></td>
    <td><pre><%= l_class.notes %></pre></td>
	<td><%= link_to l_class.lessons.count, l_class %></td>
    <td><%= link_to 'Show', l_class %></td>
    <td><%= link_to 'Edit', edit_l_class_path(l_class) %></td>
    <td><%= link_to 'Destroy', l_class, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

